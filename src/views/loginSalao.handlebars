<div class="container-fluid text-center">
    <div class="row content">
        <div class="col">
            <h1 class="text-align center">LOGIN SALÃO</h1>
        </div>
    </div>
    <br>
    <div class="row content">
        <div class="col-sm-3 sidenav">
        </div>
        <div class="col-sm-6 text-justify">
            <form action="/login-salao" method="post" name='formPJ' id="formPJ">
                <div class="form-group">
                    <label for="cnpj">CNPJ</label>
                    <input class="form-control" name="cnpj" type="text" id="cnpj" onBlur="ValidarCNPJ(formPJ.cnpj);"
                        onKeyPress="return txtBoxFormat(this.id, '99.999.999/9999-99',event);" maxlength="18" />
                </div>

                <div class="form-group">
                    <label for="senha">Senha</label>
                    <input class="form-control" type="password" name="senha" id="senha">
                </div>
                <div class="row">
                    <div class="col-2">
                        <button type="submit" class="btn btn-outline-primary">Entrar</button>
                    </div>
                    <div class="col">
                        <a class="a" href="/login-cliente">DESEJO LOGAR CLIENTE</a>
                    </div>
                    <div class="col">
                        <a class="a" href="/cadastro-salao">DESEJO CADASTRAR SALÃO</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-3 sidenav">
        </div>
    </div>
</div>